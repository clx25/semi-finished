{
  "postQ": {
    "/login": {
      "summary": "登录",
      "version": 0,
      "params": {
        "@tb": "semi_user",
        "@row": 1,
        "@bean": "captchaEnhance,loginEnhance,afterLoginEnhance",
        "username$$": "username",
        "~password$$": "password",
        "@": "username,id,password",
        "id:": [
          {
            "@tb": "semi_user_role",
            "@on": "user_id",
            "@": "role_id:roleId"
          },
          {
            "@tb": "semi_user_dept",
            "@on": "user_id",
            "@": "dept_id:deptId",
            "#str": "dept_id"
          }
        ]
      },
      "ruler": {
        "username": {
          "required": "username不能为空"
        },
        "password": {
          "required": "密码不能为空",
          "len>=6": "密码长度应该大于6"
        }
      }
    }
  },
  "post": {
    "/signup": {
      "summary": "注册",
      "params": {
        "@tb": "semi_user",
        "@bean": "captchaEnhance,pwdEncodeEnhance",
        "username$$": "username",
        "password$$": "password"
      },
      "ruler": {
        "username": {
          "text": "username不能为空",
          "unique": "用户已存在"
        },
        "password": {
          "text": "密码不能为空",
          "len>=6": "密码长度应该大于6"
        }
      }
    }
  },
  "put": {
    "/password": {
      "summary": "修改密码",
      "params": {
        "@tb": "semi_user",
        "@bean": "pwdEncodeEnhance,captchaEnhance",
        "id$": "id",
        "password$$": "password"
      },
      "ruler": {
        "password": {
          "len>=6": "密码长度应该大于6"
        }
      }
    }
  },
  "get": {
    "current": {
      "summary": "获取当前登录用户",
      "version": 0,
      "params": {
        "@tb": "semi_user",
        "@row": 1,
        "@": "username,id,password",
        "id$": "id",
        "id:": [
          {
            "@tb": "semi_user_role",
            "@on": "user_id",
            "@": "role_id:roleId"
          },
          {
            "@tb": "semi_user_dept",
            "@on": "user_id",
            "@": "dept_id:deptId",
            "#str": "dept_id"
          }
        ]
      }
    }
  }
}

